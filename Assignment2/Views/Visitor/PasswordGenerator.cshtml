@model IEnumerable<Assignment2.Models.Password>


<p>
    @Html.ActionLink("Create New", "Login")
</p>

<h3> Welcome @ViewBag.User, here are some possible passwords for you</h3>

<table class="table">
    <tr>
        <th>
            <h4>Passwords</h4>
        </th>
        <th></th>
    </tr>
    @for(int i = 0; i < 5; i++)
    {
        <tr>
            <td>
            </td>
            <td>
                @Html.DisplayNameFor(model => model.LastName)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.BirthYear)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Color)
            </td>
            <td>
                <button type="button" value="Select" class="btn"> @Html.ActionLink("Select", "Select")</button>
            </td>
        </tr>
    }
</table>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Log In" class="btn btn-default" />
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}